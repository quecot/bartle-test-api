{
  "compilerOptions": {
    "module": "ES2022",
    "target": "ES2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "baseUrl": "./",
      "paths": {
        "@interfaces/*": [
          "./src/interfaces/*"
        ],
        "@utils/*": [
          "./src/utils/*"
        ],
        "@src/*": [
          "./src/*"
        ]
      }
  }
}
